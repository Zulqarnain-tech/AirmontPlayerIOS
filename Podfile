target 'Airmont Player tvOS' do
  platform :tvos, '11.0'
  use_frameworks!
  pod 'TVVLCKit', '~> 3.4.0'
  pod "GCDWebServer", "~> 3.0"
  pod 'Alamofire', '~> 4.4'
  pod 'AlamofireImage', '~> 3.3'
end

target 'Airmont Player iOS' do
  platform :ios, '9.0'
  use_frameworks!
  pod 'MobileVLCKit', '~>3.3.0'
  pod "GCDWebServer", "~> 3.0"
  pod 'Alamofire', '~> 4.4'
  pod 'AlamofireImage', '~> 3.3'
  pod 'DropDown','~> 2.3.4'
  pod 'ScrollableSegmentedControl', '~> 1.5.0'
end
